    <script src="/studDash/js/core/popper.min.js?ver=1.1.0"></script>
    <script src="/studDash/js/core/bootstrap.min.js?ver=1.1.0"></script>
    <script src="/studDash/js/now-ui-kit.js?ver=1.1.0"></script>
    <script src="/studDash/js/aos.js?ver=1.1.0"></script>
    <script src="/studDash/scripts/main.js?ver=1.1.0"></script>
  </body>
</html>